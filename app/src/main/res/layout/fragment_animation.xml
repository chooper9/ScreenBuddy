<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="myapps.screenbuddy.AnimationFragment">

    <Spinner
        android:id="@+id/animation_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp" />

    <Button
        android:id="@+id/animation_new_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:layout_alignParentEnd="true"
        android:text="@string/new_chara"
        android:onClick="onNewItemClicked" />

    <ListView
        android:id="@+id/animation_images_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/animation_spinner"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
